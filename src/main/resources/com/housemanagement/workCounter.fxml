<VBox alignment="CENTER" maxHeight="303.0" maxWidth="504.0" minHeight="303.0" minWidth="504.0" prefHeight="303.0" prefWidth="504.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.housemanagement.WorkCounterController">
   <children>
      <Label fx:id="labelNameFrom" alignment="CENTER" text="Label">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Номер квартиры:">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="comboBoxFlats" prefHeight="26.0" prefWidth="105.0" visibleRowCount="1000">
               <HBox.margin>
                  <Insets left="35.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Тип счетчика:">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="comboBoxTypes" prefHeight="26.0" prefWidth="215.0" visibleRowCount="1000">
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Номер счетчика:">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="textFNumberCounter">
               <HBox.margin>
                  <Insets left="39.0" />
               </HBox.margin>
               <font>
                  <Font name="Nirmala UI" size="13.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Статус использования">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <CheckBox fx:id="checkBoxStatus" mnemonicParsing="false">
               <HBox.margin>
                  <Insets left="5.0" top="2.0" />
               </HBox.margin>
            </CheckBox>
         </children>
      </HBox>
      <Button fx:id="buttonWorkCounter" mnemonicParsing="false" onAction="#onWorkCounter" prefHeight="36.0" prefWidth="139.0" text="Далее">
         <font>
            <Font name="Nirmala UI" size="15.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
